<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3b205a"
                android:orientation="vertical">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="12dp"
      android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_create_feedback"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:background="#3f245e">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="60dp"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Instant Feedback"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description on creating Instant Feedback"
            android:textColor="@color/white"/>
      </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_create_development_plan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="#3f245e">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="60dp"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Development Plan"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description on creating Development Plan"
            android:textColor="@color/white"/>
      </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_view_report"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="#3f245e">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="60dp"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Reports"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description on viewing reports"
            android:textColor="@color/white"/>
      </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_view_survey"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="#3f245e">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="60dp"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Surveys"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description on creating viewing surveys"
            android:textColor="@color/white"/>
      </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="3">

      <RelativeLayout
          android:id="@+id/layout_360_feedback"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginRight="4dp"
          android:layout_weight="1"
          android:background="#3f245e">\

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="360"
              android:textColor="#84dba4"
              android:textSize="26sp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Feedback Requests"
              android:textColor="@color/white"
              android:textSize="12sp"/>
        </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/layout_new_report"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          android:layout_weight="1"
          android:background="#3f245e">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="New"
              android:textColor="#7ac7dc"
              android:textSize="26sp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Reports"
              android:textColor="@color/white"
              android:textSize="12sp"/>
        </LinearLayout>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/layout_instant_feedback"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="4dp"
          android:layout_weight="1"
          android:background="#3f245e">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="Instant"
              android:textColor="#af3eda"
              android:textSize="26sp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Feedback Requests"
              android:textColor="@color/white"
              android:textSize="12sp"/>
        </LinearLayout>
      </RelativeLayout>
    </LinearLayout>
  </LinearLayout>

</RelativeLayout>